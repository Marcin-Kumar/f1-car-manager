<UserControl
    x:Class="Frontend.UI.EssentialControls.Logo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Frontend.UI.EssentialControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="70"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <StackPanel
        Height="35"
        Margin="20"
        Orientation="Horizontal">
        <Image
            Width="40"
            VerticalAlignment="Center"
            RenderTransformOrigin="0.489,0.694"
            Source="../../Images/audi-logo.png" />
        <TextBlock
            Margin="10,2,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="Montserrat"
            FontSize="20"
            FontWeight="Medium"
            Foreground="{StaticResource primaryColorRedBrush}"
            Text="F1 HUB" />
    </StackPanel>
</UserControl>
