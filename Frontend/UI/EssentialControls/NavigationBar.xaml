<UserControl
    x:Class="Frontend.UI.EssentialControls.NavigationBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Frontend.UI.EssentialControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:Frontend.UI.EssentialControls"
    d:DesignHeight="450"
    d:DesignWidth="250"
    mc:Ignorable="d">

    <StackPanel>
        <userControls:Logo />

        <RadioButton Style="{StaticResource MenuButtonStyle}">
            <TextBlock Style="{StaticResource MenuTextStyle}" Text="Car Overview" />
        </RadioButton>

        <RadioButton Style="{StaticResource MenuButtonStyle}">
            <TextBlock Style="{StaticResource MenuTextStyle}" Text="Car Performance" />
        </RadioButton>

        <RadioButton Style="{StaticResource MenuButtonStyle}">
            <TextBlock Style="{StaticResource MenuTextStyle}" Text="Race Analysis" />
        </RadioButton>

        <RadioButton Style="{StaticResource MenuButtonStyle}">
            <TextBlock Style="{StaticResource MenuTextStyle}" Text="Logistics" />

        </RadioButton>
    </StackPanel>



</UserControl>
