<UserControl
    x:Class="Frontend.UI.EssentialControls.StatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Frontend.UI.EssentialControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="80"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UniformGrid Columns="4">
        <TextBlock
            Margin="20,20,20,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Foreground="#B8B8B8"
            Text="Next:Q1" />
        <TextBlock
            Margin="20,20,20,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Foreground="#B8B8B8"
            Text="Venue:Q1" />
        <TextBlock
            Margin="20,20,20,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Foreground="#B8B8B8"
            Text="Date:Q1" />
        <TextBlock
            Margin="20,20,20,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Foreground="#B8B8B8"
            Text="Car Status:Q1" />
    </UniformGrid>
</UserControl>
